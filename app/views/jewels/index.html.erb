<p id="notice"><%= notice %></p>

<h1>Jewels</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Type</th>
      <th>Size</th>
      <th>Image</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jewels.each do |jewel| %>
      <tr>
        <td><%= jewel.name %></td>
        <td><%= jewel.desc %></td>
        <td><%= jewel.jewel_type %></td>
        <td><%= jewel.size %></td>
        <td><%= jewel.image %></td>
        <td><%= jewel.price %></td>
        <td><%= link_to 'Show', jewel %></td>
        <td><%= link_to 'Edit', edit_jewel_path(jewel) %></td>
        <td><%= link_to 'Destroy', jewel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

