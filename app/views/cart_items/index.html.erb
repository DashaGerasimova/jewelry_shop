<h1>Cart Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% cart.cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.product.name %></td>
        <td><%= cart_item.product.desc %></td>
        <td><%= cart_item.quantity %></td>
        <td><%= link_to 'Destroy', cart_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
